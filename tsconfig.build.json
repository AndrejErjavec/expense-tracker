{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
